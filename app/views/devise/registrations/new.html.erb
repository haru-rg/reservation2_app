<div class="account-new">
    <div class="account-new-area">
        <div class="account-new-area-input">
            <h2>新しいアカウントを作成</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="field">
                        <%= f.text_field :name, autofocus: true, autocomplete: "name" ,:placeholder =>" ユーザー名" ,class:"inputarea" %>
                    </div>
                    <div class="field">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder =>" メールアドレス" ,class:"inputarea" %>
                    </div>
                    <div class="field">
                        <%= f.password_field :password, autocomplete: "new-password" ,:placeholder =>" パスワード" ,class:"inputarea" %>
                    </div>
                    <div class="field">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,:placeholder =>" パスワード確認" ,class:"inputarea" %>
                    </div>
                    <div class="actions">
                        <%= f.submit "Sign up" , class: "blue-button-new" %>
                    </div>
                    <% end %>
                        <%= render "devise/shared/links" %>
        </div>
    </div>
</div>